FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     icoFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         100;

deltaT          1e-3; // NOT CHECK


adjustTimeStep yes;
maxCo 1;           // NOT WORKING
maxDeltaT 1e-1;  

writeControl    timeStep;

writeInterval   20;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions
{
    inletFlow
    {
        type            surfaceFieldValue;
        functionObjectLibs ("libfieldFunctionObjects.so");
        log             true;
        writeFields     false; // Opcional, mas evita confus√µes
        valueOutput     true;
        operation       areaIntegrate;
        regionType      patch;
        name            outlet;
        fields          (U);
    }

    CourantNumber    // NOT WORKING
    {
        type            CourantNo;
        functionObjectLibs ("libutilityFunctionObjects.so");
        valueOutput     true;
        log             true;
        writeControl   timeStep;
        writeInterval  1;
    }
}

